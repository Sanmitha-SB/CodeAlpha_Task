import random

words = ['apple', 'robot', 'chair', 'table', 'python']
word = random.choice(words)
display = ['_'] * len(word)
attempts = 6
guessed = []

print("ðŸŽ® Hangman Game Started!")

while attempts > 0 and ''.join(display) != word:
    print("\nWord:", ' '.join(display))
    print("Attempts left:", attempts)
    guess = input("Guess a letter: ").lower()

    if not guess.isalpha() or len(guess) != 1 or guess in guessed:
        print("Invalid or repeated input.")
        continue

    guessed.append(guess)

    if guess in word:
        for i, letter in enumerate(word):
            if letter == guess:
                display[i] = guess
    else:
        attempts -= 1

if ''.join(display) == word:
    print("\nðŸŽ‰ You won! The word was:", word)
else:
    print("\nðŸ’€ You lost! The word was:", word)
